<div class="a11y-controls" role="region" aria-label="Contrôles d'accessibilité" data-accessibility-controls>
  <button type="button" class="a11y-controls__btn" data-action="decrease-font">{{ 'general.accessibility.decrease_text' | t }}</button>
  <button type="button" class="a11y-controls__btn" data-action="increase-font">{{ 'general.accessibility.increase_text' | t }}</button>
  <button type="button" class="a11y-controls__btn" data-action="toggle-contrast">{{ 'general.accessibility.toggle_contrast' | t }}</button>
  <button type="button" class="a11y-controls__btn" data-action="toggle-dyslexia">{{ 'general.accessibility.toggle_dyslexia' | t }}</button>
  <span class="a11y-controls__status" role="status" aria-live="polite"></span>
</div>
