{% assign rating_value = rating | default: 5 %}
{% assign stars = rating_value | round %}
<div class="rating" role="img" aria-label="{{ rating_value }} sur 5">
  {% for i in (1..5) %}
    <span class="rating__star{% if i <= stars %} rating__star--filled{% endif %}" aria-hidden="true">â˜…</span>
  {% endfor %}
  {% if count %}
    <span class="rating__count">{{ 'products.reviews.based_on' | t: count: count }}</span>
  {% endif %}
</div>
