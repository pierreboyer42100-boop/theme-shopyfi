/*
  Flame Box - Feuille de styles principale
  Accentue une ambiance chaleureuse et haut de gamme
*/
:root {
  --color-background: {{ settings.color_background }};
  --color-text: {{ settings.color_text }};
  --color-accent: {{ settings.color_accent }};
  --color-accent-soft: {{ settings.color_accent | color_modify: 'alpha', 0.4 }};
  --font-primary: "{{ settings.font_primary.family | default: 'Poppins' }}", sans-serif;
  --font-secondary: "{{ settings.font_secondary.family | default: 'Montserrat' }}", sans-serif;
}

* {
  box-sizing: border-box;
}

body.flame-box-body {
  margin: 0;
  font-family: var(--font-primary);
  background-color: var(--color-background);
  color: var(--color-text);
  min-height: 100vh;
  position: relative;
}

.skip-to-content {
  position: absolute;
  top: -100px;
  left: 1rem;
  background: var(--color-accent);
  color: #fff;
  padding: 0.5rem 1rem;
  border-radius: 999px;
  transition: top 0.3s ease;
  z-index: 1000;
}

.skip-to-content:focus {
  top: 1rem;
}

.flame-background {
  position: fixed;
  inset: 0;
  background: radial-gradient(circle at 50% 20%, rgba(255, 140, 0, 0.25), transparent 60%),
              radial-gradient(circle at 80% 0%, rgba(255, 69, 0, 0.2), transparent 55%),
              radial-gradient(circle at 20% 80%, rgba(255, 0, 0, 0.15), transparent 60%);
  filter: blur(120px);
  z-index: -1;
  animation: emberPulse 12s infinite alternate;
}

@keyframes emberPulse {
  0% { opacity: 0.55; }
  50% { opacity: 0.8; }
  100% { opacity: 0.6; }
}

.site-wrapper {
  backdrop-filter: blur(24px);
}

.container {
  width: min(1100px, 90vw);
  margin: 0 auto;
}

.header-inner,
.hero-inner,
.product-layout,
.footer-grid,
.contact-grid {
  display: grid;
  gap: 2rem;
}

.header-inner {
  grid-template-columns: auto 1fr auto;
  align-items: center;
  padding: 1rem 0;
}

.promo-bar {
  text-align: center;
  padding: 0.5rem;
  background: rgba(0, 0, 0, 0.35);
  font-size: 0.95rem;
  letter-spacing: 0.02em;
}

.logo-text {
  font-family: var(--font-secondary);
  font-weight: 600;
  font-size: 1.5rem;
  color: var(--color-accent);
  text-transform: uppercase;
}

.main-navigation {
  justify-self: center;
}

.nav-toggle {
  display: none;
  background: transparent;
  border: 1px solid rgba(255,255,255,0.25);
  color: var(--color-text);
  border-radius: 999px;
  padding: 0.35rem 0.75rem;
}

.nav-list {
  list-style: none;
  display: flex;
  gap: 1.5rem;
  padding: 0;
  margin: 0;
}

.nav-link {
  color: var(--color-text);
  text-decoration: none;
  position: relative;
}

.nav-link::after {
  content: '';
  position: absolute;
  left: 0;
  bottom: -4px;
  width: 100%;
  height: 2px;
  background: var(--color-accent);
  transform: scaleX(0);
  transform-origin: center;
  transition: transform 0.3s ease;
}

.nav-link:hover::after,
.nav-link:focus-visible::after {
  transform: scaleX(1);
}

.header-actions a {
  margin-left: 1rem;
  font-size: 1.25rem;
  color: var(--color-text);
}

.hero {
  padding: 5rem 0;
}

.hero-inner {
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  align-items: center;
}

.hero-eyebrow {
  text-transform: uppercase;
  letter-spacing: 0.3em;
  color: rgba(255, 255, 255, 0.6);
}

.hero h1 {
  font-size: clamp(2.8rem, 6vw, 4rem);
  margin-bottom: 1rem;
  font-family: var(--font-secondary);
}

.hero-text {
  max-width: 520px;
  margin-bottom: 1.5rem;
  line-height: 1.6;
}

.hero-visual img {
  width: 100%;
  border-radius: 24px;
  box-shadow: 0 20px 50px rgba(255, 94, 0, 0.25);
}

.btn {
  display: inline-block;
  padding: 0.9rem 2.4rem;
  border-radius: 999px;
  text-decoration: none;
  font-weight: 600;
  letter-spacing: 0.05em;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  cursor: pointer;
  border: none;
}

.btn-primary {
  background: linear-gradient(120deg, var(--color-accent), rgba(255, 140, 0, 0.85));
  color: #1b0c06;
  box-shadow: 0 0 20px rgba(255, 140, 0, 0.45);
}

.btn-ghost {
  background: transparent;
  color: var(--color-text);
  border: 1px solid rgba(255, 255, 255, 0.3);
}

.btn:hover,
.btn:focus-visible {
  transform: translateY(-2px);
  box-shadow: 0 0 30px rgba(255, 94, 0, 0.6);
}

.benefits {
  padding: 4rem 0;
}

.benefits-grid {
  display: grid;
  gap: 2rem;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
}

.benefit-card {
  padding: 1.75rem;
  background: rgba(17, 9, 2, 0.65);
  border-radius: 20px;
  border: 1px solid rgba(255, 255, 255, 0.08);
  box-shadow: inset 0 0 40px rgba(255, 69, 0, 0.05);
  transition: transform 0.3s ease;
}

.benefit-card:hover {
  transform: translateY(-6px);
}

.benefit-icon {
  font-size: 2rem;
  margin-bottom: 0.75rem;
}

.testimonials {
  padding: 4rem 0;
}

.testimonials-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
  gap: 2rem;
}

.testimonial-card {
  background: rgba(0, 0, 0, 0.55);
  border-radius: 18px;
  padding: 2rem;
  border: 1px solid rgba(255, 255, 255, 0.08);
  position: relative;
}

.testimonial-card::before {
  content: '\201C';
  font-size: 4rem;
  position: absolute;
  top: -1.4rem;
  left: 1.2rem;
  color: rgba(255, 140, 0, 0.4);
}

.testimonial-card blockquote {
  margin: 0 0 1.5rem;
  line-height: 1.7;
}

.testimonial-name {
  font-weight: 600;
}

.testimonial-role {
  display: block;
  font-size: 0.9rem;
  opacity: 0.7;
}

.cta-final {
  padding: 4rem 0 5rem;
  text-align: center;
}

.cta-final p {
  max-width: 540px;
  margin: 0.5rem auto 1.5rem;
}

.product-page {
  padding: 4rem 0;
}

.product-layout {
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  align-items: start;
}

.product-media {
  display: grid;
  gap: 1rem;
}

.featured-media,
.gallery-media {
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 15px 35px rgba(0, 0, 0, 0.35);
}

.product-pricing {
  display: flex;
  align-items: baseline;
  gap: 1rem;
  font-size: 1.3rem;
}

.product-pricing .compare {
  text-decoration: line-through;
  opacity: 0.6;
}

.badge {
  display: inline-block;
  padding: 0.35rem 0.9rem;
  border-radius: 999px;
  font-size: 0.8rem;
  text-transform: uppercase;
  letter-spacing: 0.1em;
}

.badge-glow {
  background: rgba(255, 140, 0, 0.2);
  color: var(--color-accent);
  box-shadow: 0 0 15px rgba(255, 140, 0, 0.4);
}

.product-form {
  margin-top: 2rem;
  display: grid;
  gap: 1rem;
}

.quantity-wrapper input {
  width: 90px;
  padding: 0.6rem;
  border-radius: 12px;
  border: 1px solid rgba(255, 255, 255, 0.2);
  background: rgba(0, 0, 0, 0.35);
  color: var(--color-text);
}

.trust-signals {
  margin-top: 1.5rem;
  display: grid;
  gap: 0.5rem;
  font-size: 0.95rem;
}

.page-content,
.contact-page,
.account-section {
  padding: 4rem 0;
}

.page-richtext {
  line-height: 1.8;
  opacity: 0.85;
}

.narrow {
  width: min(760px, 90vw);
  margin: 0 auto;
}

.faq-items details {
  background: rgba(0, 0, 0, 0.4);
  border-radius: 16px;
  margin-bottom: 1rem;
  padding: 1rem 1.25rem;
  border: 1px solid rgba(255, 255, 255, 0.08);
}

.about-section {
  margin-top: 3rem;
  padding: 3rem;
  border-radius: 24px;
  background: rgba(24, 12, 5, 0.55);
}

.about-pillars {
  display: grid;
  gap: 1.5rem;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  margin-top: 2rem;
}

.contact-grid {
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
}

.contact-socials,
.footer-socials,
.footer-grid ul,
.nav-list {
  list-style: none;
  padding: 0;
  margin: 0;
}

.contact-socials li a,
.footer-socials li a {
  color: var(--color-text);
  text-decoration: none;
  opacity: 0.8;
}

.contact-socials li a:hover,
.footer-socials li a:hover {
  opacity: 1;
}

.site-footer {
  padding: 3rem 0 1.5rem;
  background: rgba(0, 0, 0, 0.55);
}

.footer-grid {
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 2rem;
  margin-bottom: 2rem;
}

.footer-bottom {
  text-align: center;
  font-size: 0.85rem;
  opacity: 0.6;
}

.form-field {
  display: grid;
  gap: 0.5rem;
}

.form-field input,
.form-field textarea {
  padding: 0.75rem 1rem;
  border-radius: 14px;
  border: 1px solid rgba(255, 255, 255, 0.15);
  background: rgba(0, 0, 0, 0.4);
  color: var(--color-text);
}

.form-success {
  margin-bottom: 1rem;
  color: var(--color-accent);
}

.badge,
.btn-primary {
  animation: gentleGlow 4s ease-in-out infinite alternate;
}

@keyframes gentleGlow {
  from { box-shadow: 0 0 18px rgba(255, 140, 0, 0.35); }
  to { box-shadow: 0 0 30px rgba(255, 69, 0, 0.55); }
}

@media (max-width: 768px) {
  .header-inner {
    grid-template-columns: 1fr auto;
    grid-template-areas: 'logo actions' 'nav nav';
  }

  .logo-area { grid-area: logo; }
  .header-actions { grid-area: actions; justify-self: end; }
  .main-navigation { grid-area: nav; }

  .nav-toggle {
    display: inline-flex;
  }

  .nav-list {
    display: none;
    flex-direction: column;
    margin-top: 1rem;
    background: rgba(0, 0, 0, 0.6);
    padding: 1rem;
    border-radius: 16px;
  }

  .nav-list.active {
    display: flex;
  }
}

.flame-active {
  box-shadow: 0 0 35px rgba(255, 120, 0, 0.6) !important;
  transform: translateY(-3px) scale(1.01);
}

.promo-banner {
  display: inline-block;
  padding: 0.4rem 1rem;
  margin: 0.5rem 0 1rem;
  border-radius: 999px;
  background: {{ settings.color_accent | color_modify: 'alpha', 0.15 }};
  color: var(--color-accent);
  font-size: 0.9rem;
  letter-spacing: 0.06em;
  text-transform: uppercase;
}

.visually-hidden {
  position: absolute !important;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border: 0;
}

.site-logo {
  max-height: 64px;
  width: auto;
}
