[
  {
    "name": "Branding",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo_image",
        "label": "Logo principal"
      },
      {
        "type": "color",
        "id": "color_accent",
        "label": "Couleur d'accent",
        "default": "#2D6CDF"
      },
      {
        "type": "color",
        "id": "color_background",
        "label": "Couleur de fond",
        "default": "#FFFFFF"
      },
      {
        "type": "color",
        "id": "color_text",
        "label": "Couleur du texte",
        "default": "#111111"
      },
      {
        "type": "range",
        "id": "border_radius",
        "label": "Rayon des bords",
        "min": 8,
        "max": 32,
        "step": 1,
        "unit": "px",
        "default": 20
      },
      {
        "type": "checkbox",
        "id": "enable_transparent_header",
        "label": "Activer le header flottant",
        "default": true
      }
    ]
  },
  {
    "name": "Typographie",
    "settings": [
      {
        "type": "select",
        "id": "base_font",
        "label": "Police principale",
        "default": "system",
        "options": [
          { "value": "system", "label": "Système (SF Pro / Helvetica / Arial)" },
          { "value": "open_sans", "label": "Open Sans" },
          { "value": "source_sans", "label": "Source Sans Pro" },
          { "value": "dyslexic", "label": "OpenDyslexic" }
        ]
      },
      {
        "type": "range",
        "id": "base_font_size",
        "label": "Taille de police par défaut",
        "min": 16,
        "max": 22,
        "step": 1,
        "unit": "px",
        "default": 18
      },
      {
        "type": "checkbox",
        "id": "enable_font_controls",
        "label": "Afficher les contrôles A+/A-",
        "default": true
      }
    ]
  },
  {
    "name": "Accessibilité",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_contrast",
