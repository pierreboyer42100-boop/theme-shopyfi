<!DOCTYPE html>
<html lang="fr" class="no-js">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{% if page_title %}{{ page_title }} – {{ shop.name }}{% else %}{{ settings.default_title | default: shop.name }}{% endif %}</title>
  <meta name="description" content="{{ settings.default_description | escape }}">
  <meta name="theme-color" content="{{ settings.color_accent | default: '#2D6CDF' }}">
  <link rel="manifest" href="{{ 'manifest.json' | asset_url }}">
  <link rel="icon" href="{{ 'logo.svg' | asset_url }}" type="image/svg+xml">
  <link rel="preload" href="{{ 'OpenDyslexic-Regular.woff2' | asset_url }}" as="font" type="font/woff2" crossorigin>
  <link rel="stylesheet" href="{{ 'theme.css' | asset_url }}" media="all">
  <style>
    :root {
      --color-accent: {{ settings.color_accent | default: '#2D6CDF' }};
      --color-bg: {{ settings.color_background | default: '#FFFFFF' }};
      --color-text: {{ settings.color_text | default: '#111111' }};
      --radius: {{ settings.border_radius | default: 20 }}px;
      --font-size-base: {{ settings.base_font_size | default: 18 }}px;
    }
  </style>
  <script>document.documentElement.classList.remove('no-js');</script>
  <script>
    window.SILVERLINK_CONFIG = {
      sw: '{{ 'sw.js' | asset_url }}',
      statusMessage: '{{ 'general.accessibility.status_updated' | t }}'
    };
  </script>
  {{ content_for_header }}
</head>
<body class="template-{{ template | handle }}" data-base-font="{{ settings.base_font }}" data-font-size="{{ settings.base_font_size }}">
  <a class="skip-link" href="#MainContent">{{ 'general.accessibility.skip_to_content' | t }}</a>
  {% if settings.enable_accessibility_controls %}
    {% render 'accessibility-controls' %}
  {% endif %}
  {% section 'header-minimal' %}
  <main id="MainContent" role="main" tabindex="-1">
    {{ content_for_layout }}
  </main>
  {% section 'footer-legal' %}
  {% render 'cookie-banner' %}
  <div class="medical-notice" aria-live="polite">{{ settings.medical_notice | default: 'Information : ces produits ne remplacent pas un avis médical.' }}</div>
  <script src="{{ 'theme.js' | asset_url }}" defer></script>
  <script src="{{ '3d.js' | asset_url }}" defer></script>
</body>
</html>
