<section class="customer customer--account" aria-labelledby="CustomerAccountHeading">
  <h1 id="CustomerAccountHeading">Bonjour {{ customer.first_name }}</h1>
  <div class="customer__details">
    <h2>Vos informations</h2>
    <p>{{ customer.email }}</p>
    <a class="btn btn--secondary" href="/account/logout">Se d√©connecter</a>
  </div>
  <div class="customer__orders">
    <h2>Commandes</h2>
    {% if customer.orders_count == 0 %}
      <p>Aucune commande pour le moment.</p>
    {% else %}
      <table>
        <thead><tr><th>Commande</th><th>Date</th><th>Total</th><th>Statut</th></tr></thead>
        <tbody>
          {% for order in customer.orders %}
            <tr>
              <td><a href="{{ order.customer_url }}">{{ order.name }}</a></td>
              <td>{{ order.created_at | date: '%d/%m/%Y' }}</td>
              <td>{{ order.total_price | money_with_currency }}</td>
              <td>{{ order.fulfillment_status_label }}</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Compte client",
  "settings": []
}
{% endschema %}
