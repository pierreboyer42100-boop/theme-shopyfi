<section class="testimonials" aria-labelledby="TestimonialsHeading-{{ section.id }}">
  <h2 id="TestimonialsHeading-{{ section.id }}">{{ section.settings.heading }}</h2>
  <div class="testimonials__grid">
    {% for block in section.blocks %}
      <article class="testimonial" itemprop="review" itemscope itemtype="https://schema.org/Review" {{ block.shopify_attributes }}>
        <meta itemprop="itemReviewed" content="SilverLink">
        <header>
          <p class="testimonial__name" itemprop="author">{{ block.settings.name }}</p>
          {% render 'rating-stars', rating: block.settings.rating, count: 1 %}
        </header>
        <p class="testimonial__text" itemprop="reviewBody">{{ block.settings.text }}</p>
      </article>
    {% endfor %}
  </div>
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "ItemList",
      "itemListElement": [
        {% for block in section.blocks %}
        {
          "@type": "Review",
          "author": "{{ block.settings.name | escape }}",
          "reviewBody": "{{ block.settings.text | escape }}",
          "reviewRating": {
            "@type": "Rating",
            "ratingValue": "{{ block.settings.rating }}",
            "bestRating": "5"
          }
        }{% unless forloop.last %},{% endunless %}
        {% endfor %}
      ]
    }
  </script>
</section>

{% schema %}
{
  "name": "Témoignages",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Titre",
      "default": "Ils nous font confiance"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Témoignage",
      "settings": [
        {
          "type": "text",
          "id": "name",
          "label": "Nom",
          "default": "Marie"
        },
        {
          "type": "range",
          "id": "rating",
          "label": "Note",
          "min": 3,
          "max": 5,
          "default": 5
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Avis",
          "default": "Une technologie simple à utiliser et rassurante."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Témoignages",
      "blocks": [
        {"type": "testimonial"},
        {"type": "testimonial"}
      ]
    }
  ]
}
{% endschema %}
