<section class="customer customer--register" aria-labelledby="CustomerRegisterHeading">
  <h1 id="CustomerRegisterHeading">{{ 'customer.register.title' | t }}</h1>
  {% form 'create_customer' %}
    <label for="RegisterFirstName">{{ 'customer.register.first_name' | t }}</label>
    <input id="RegisterFirstName" name="customer[first_name]" type="text" required>
    <label for="RegisterLastName">{{ 'customer.register.last_name' | t }}</label>
    <input id="RegisterLastName" name="customer[last_name]" type="text" required>
    <label for="RegisterEmail">{{ 'customer.login.email' | t }}</label>
    <input id="RegisterEmail" name="customer[email]" type="email" required>
    <label for="RegisterPassword">{{ 'customer.login.password' | t }}</label>
    <input id="RegisterPassword" name="customer[password]" type="password" required>
    <button class="btn btn--primary btn--xl" type="submit">{{ 'customer.register.submit' | t }}</button>
  {% endform %}
</section>

{% schema %}
{
  "name": "Inscription client",
  "settings": []
}
{% endschema %}
