<section class="collection" aria-labelledby="CollectionHeading">
  <header class="collection__header">
    <h1 id="CollectionHeading">{{ collection.title }}</h1>
    {% if collection.description != blank %}
      <div class="collection__description rte">{{ collection.description }}</div>
    {% endif %}
  </header>
  {% if section.settings.show_filters %}
  <form class="collection__filters" method="get">
    <label for="FilterPrice">Prix maximum</label>
    <input id="FilterPrice" type="number" name="filter.v.price.lte" min="0" step="5" value="{{ request.params['filter.v.price.lte'] }}">
    <label for="FilterConnectivity">Connectivit√©</label>
    <select id="FilterConnectivity" name="filter.p.m.connectivity">
      <option value="">Toutes</option>
      <option value="wifi">Wi-Fi</option>
      <option value="lte">4G</option>
      <option value="bluetooth">Bluetooth</option>
    </select>
    <button class="btn btn--secondary" type="submit">Filtrer</button>
  </form>
  {% endif %}
  {% if section.settings.show_sort %}
    <div class="collection__sort">
      <label for="SortBy">Trier par</label>
      <select id="SortBy" name="sort_by" onchange="this.form.submit()" form="CollectionSortForm">
        {% for option in collection.sort_options %}
          <option value="{{ option.value }}"{% if option.value == collection.sort_by %} selected{% endif %}>{{ option.name }}</option>
        {% endfor %}
      </select>
    </div>
    <form id="CollectionSortForm" method="get"></form>
  {% endif %}
  <div class="collection__grid">
    {% for product in collection.products %}
      <article class="product-card" aria-label="{{ product.title }}">
        <a href="{{ product.url }}" class="product-card__image">
          <img src="{{ product.featured_image | image_url: width: 800 }}" loading="lazy" alt="{{ product.featured_image.alt | default: product.title }}">
        </a>
        <div class="product-card__body">
          <h2><a href="{{ product.url }}">{{ product.title }}</a></h2>
          {% render 'rating-stars', rating: product.metafields.reviews.rating.value, count: product.metafields.reviews.rating_count %}
          {% render 'price', product: product %}
          <div class="product-card__actions">
            <a class="btn btn--secondary" href="{{ product.url }}">Voir</a>
            <form method="post" action="/cart/add">
              <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
              <button class="btn btn--primary" type="submit">{{ 'general.buttons.add_to_cart' | t }}</button>
            </form>
          </div>
        </div>
      </article>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Collection principale",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_filters",
      "label": "Afficher les filtres",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_sort",
      "label": "Afficher le tri",
      "default": true
    }
  ]
}
{% endschema %}
