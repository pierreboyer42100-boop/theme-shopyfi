<section class="legal" aria-labelledby="LegalHeading-{{ section.id }}">
  <h1 id="LegalHeading-{{ section.id }}">{{ section.settings.title }}</h1>
  <div class="legal__content rte">
    {{ section.settings.body }}
  </div>
</section>

{% schema %}
{
  "name": "Contenu légal",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Titre",
      "default": "Mentions légales"
