{%- comment -%}Pied de page moderne avec structure en colonnes et icônes sociales{%- endcomment -%}
<footer class="bg-background text-foreground border-t border-border mt-16" role="contentinfo">
  <div class="container mx-auto px-6 py-12">
    {%- if section.settings.primary_image != blank or section.settings.secondary_image != blank -%}
      <div class="flex flex-col sm:flex-row items-center justify-center gap-6 mb-10">
        {%- if section.settings.primary_image != blank -%}
          {%- assign primary_alt = section.settings.primary_image_alt | default: section.settings.primary_image.alt | default: 'Image mise en avant' -%}
          {%- capture primary_image_tag -%}
            {{ section.settings.primary_image | image_url: width: 600 | image_tag: alt: primary_alt, class: 'w-full max-w-xs rounded-xl shadow-md object-cover' }}
          {%- endcapture -%}
          {%- if section.settings.primary_image_link != blank -%}
            <a href="{{ section.settings.primary_image_link }}" class="group block"{% if section.settings.primary_image_link_external %} target="_blank" rel="noopener"{% endif %}>
              {{ primary_image_tag }}
            </a>
          {%- else -%}
            {{ primary_image_tag }}
          {%- endif -%}
        {%- endif -%}

        {%- if section.settings.secondary_image != blank -%}
          {%- assign secondary_alt = section.settings.secondary_image_alt | default: section.settings.secondary_image.alt | default: 'Image mise en avant secondaire' -%}
          {%- capture secondary_image_tag -%}
            {{ section.settings.secondary_image | image_url: width: 600 | image_tag: alt: secondary_alt, class: 'w-full max-w-xs rounded-xl shadow-md object-cover' }}
          {%- endcapture -%}
          {%- if section.settings.secondary_image_link != blank -%}
            <a href="{{ section.settings.secondary_image_link }}" class="group block"{% if section.settings.secondary_image_link_external %} target="_blank" rel="noopener"{% endif %}>
              {{ secondary_image_tag }}
            </a>
          {%- else -%}
            {{ secondary_image_tag }}
          {%- endif -%}
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-8 mb-8">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'legal_links' -%}
            <div {{ block.shopify_attributes }}>
              <h3 class="font-semibold mb-4">{{ block.settings.heading | default: 'Légal' }}</h3>
              <ul class="space-y-2 text-sm text-muted-foreground">
                {%- assign mentions_label = block.settings.mentions_label | default: 'Mentions légales' -%}
                {%- assign mentions_url = block.settings.mentions_url | default: settings.url_mentions | default: '#' -%}
                {%- assign cgv_label = block.settings.cgv_label | default: 'CGV' -%}
                {%- assign cgv_url = block.settings.cgv_url | default: settings.url_cgv | default: '#' -%}
                {%- assign privacy_label = block.settings.privacy_label | default: 'Confidentialité' -%}
                {%- assign privacy_url = block.settings.privacy_url | default: settings.url_privacy | default: '#' -%}
                {%- assign cookies_label = block.settings.cookies_label | default: 'Cookies' -%}
                {%- assign cookies_url = block.settings.cookies_url | default: settings.url_returns | default: '#' -%}

                <li>
                  <a href="{{ mentions_url }}" class="hover:text-primary transition-colors">{{ mentions_label }}</a>
                </li>
                <li>
                  <a href="{{ cgv_url }}" class="hover:text-primary transition-colors">{{ cgv_label }}</a>
                </li>
                <li>
                  <a href="{{ privacy_url }}" class="hover:text-primary transition-colors">{{ privacy_label }}</a>
                </li>
                <li>
                  <a href="{{ cookies_url }}" class="hover:text-primary transition-colors">{{ cookies_label }}</a>
                </li>
              </ul>
            </div>
          {%- when 'menu' -%}
            <div {{ block.shopify_attributes }}>
              {%- if block.settings.heading != blank -%}
                <h3 class="font-semibold mb-4">{{ block.settings.heading }}</h3>
              {%- endif -%}
              {%- if block.settings.menu != blank -%}
                <ul class="space-y-2 text-sm text-muted-foreground">
                  {%- for link in linklists[block.settings.menu].links -%}
                    <li>
                      <a href="{{ link.url }}" class="hover:text-primary transition-colors">{{ link.title }}</a>
                    </li>
                  {%- endfor -%}
                </ul>
              {%- else -%}
                <p class="text-sm text-muted-foreground">Ajoutez un menu pour afficher vos liens.</p>
              {%- endif -%}
            </div>
          {%- when 'image' -%}
            <div {{ block.shopify_attributes }}>
              {%- if block.settings.image != blank -%}
                {%- assign block_alt = block.settings.alt | default: block.settings.image.alt | default: 'Image de pied de page' -%}
                {%- assign image_width = block.settings.image_max_width | default: 320 -%}
                {%- capture footer_image_tag -%}
                  {{ block.settings.image | image_url: width: image_width | image_tag: alt: block_alt, class: 'w-full h-auto rounded-lg object-cover' }}
                {%- endcapture -%}
                {%- if block.settings.link != blank -%}
                  <a href="{{ block.settings.link }}" class="group block"{% if block.settings.open_in_new_window %} target="_blank" rel="noopener"{% endif %}>
                    {{ footer_image_tag }}
                  </a>
                {%- else -%}
                  {{ footer_image_tag }}
                {%- endif -%}
                {%- if block.settings.caption != blank -%}
                  <p class="mt-3 text-sm text-muted-foreground text-center">{{ block.settings.caption }}</p>
                {%- endif -%}
              {%- else -%}
                <div class="border border-dashed border-border rounded-lg p-6 text-center text-sm text-muted-foreground">
                  Ajoutez une image pour l'afficher ici.
                </div>
              {%- endif -%}
            </div>
          {%- when 'text' -%}
            <div {{ block.shopify_attributes }}>
              {%- if block.settings.heading != blank -%}
                <h3 class="font-semibold mb-4">{{ block.settings.heading }}</h3>
              {%- endif -%}
              {%- if block.settings.content != blank -%}
                <div class="space-y-2 text-sm text-muted-foreground">{{ block.settings.content }}</div>
              {%- endif -%}
            </div>
        {%- endcase -%}
      {%- else -%}
        <div>
          <h3 class="font-semibold mb-4">Légal</h3>
          <ul class="space-y-2 text-sm text-muted-foreground">
            <li>
              <a href="{{ settings.url_mentions | default: '#' }}" class="hover:text-primary transition-colors">Mentions légales</a>
            </li>
            <li>
              <a href="{{ settings.url_cgv | default: '#' }}" class="hover:text-primary transition-colors">CGV</a>
            </li>
            <li>
              <a href="{{ settings.url_privacy | default: '#' }}" class="hover:text-primary transition-colors">Confidentialité</a>
            </li>
            <li>
              <a href="{{ settings.url_returns | default: '#' }}" class="hover:text-primary transition-colors">Cookies</a>
            </li>
          </ul>
        </div>
      {%- endfor -%}
    </div>

    <div class="border-t border-border pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <div class="text-sm text-muted-foreground space-y-2 text-center md:text-left">
          {%- assign current_year = 'now' | date: '%Y' -%}
          {%- if section.settings.bottom_text != blank -%}
            {%- assign bottom_text = section.settings.bottom_text | replace: '{year}', current_year | replace: '{shop_name}', shop.name -%}
            <p>{{ bottom_text }}</p>
          {%- else -%}
            <p>&copy; {{ current_year }} {{ shop.name }}. Tous droits réservés.</p>
          {%- endif -%}

          {%- if section.settings.show_medical_notice and settings.medical_notice != blank -%}
            <p class="text-xs md:text-sm">{{ settings.medical_notice }}</p>
          {%- endif -%}
        </div>

        <div class="flex space-x-6">
          {%- if section.settings.facebook_url != blank -%}
            <a href="{{ section.settings.facebook_url }}" class="text-muted-foreground hover:text-primary transition-colors" aria-label="Facebook">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" clip-rule="evenodd" />
              </svg>
            </a>
          {%- endif -%}

          {%- if section.settings.twitter_url != blank -%}
            <a href="{{ section.settings.twitter_url }}" class="text-muted-foreground hover:text-primary transition-colors" aria-label="Twitter">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84" />
              </svg>
            </a>
          {%- endif -%}

          {%- if section.settings.instagram_url != blank -%}
            <a href="{{ section.settings.instagram_url }}" class="text-muted-foreground hover:text-primary transition-colors" aria-label="Instagram">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path fill-rule="evenodd" d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z" clip-rule="evenodd" />
              </svg>
            </a>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Pied de page moderne",
  "settings": [
    {
      "type": "image_picker",
      "id": "primary_image",
      "label": "Image principale mise en avant"
    },
    {
      "type": "text",
      "id": "primary_image_alt",
      "label": "Texte alternatif de l'image principale",
      "default": "Canne pliante ergonomique"
    },
    {
      "type": "url",
      "id": "primary_image_link",
      "label": "Lien de l'image principale"
    },
    {
      "type": "checkbox",
      "id": "primary_image_link_external",
      "label": "Ouvrir le lien principal dans un nouvel onglet",
      "default": false
    },
    {
      "type": "image_picker",
      "id": "secondary_image",
      "label": "Image secondaire mise en avant"
    },
    {
      "type": "text",
      "id": "secondary_image_alt",
      "label": "Texte alternatif de l'image secondaire",
      "default": "Canne pliante lumineuse"
    },
    {
      "type": "url",
      "id": "secondary_image_link",
      "label": "Lien de l'image secondaire"
    },
    {
      "type": "checkbox",
      "id": "secondary_image_link_external",
      "label": "Ouvrir le lien secondaire dans un nouvel onglet",
      "default": false
    },
    {
      "type": "text",
      "id": "bottom_text",
      "label": "Texte de bas de page",
      "default": "© {year} {shop_name}. Tous droits réservés."
    },
    {
      "type": "checkbox",
      "id": "show_medical_notice",
      "label": "Afficher l'avertissement médical global",
      "default": true
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "Lien Facebook"
    },
    {
      "type": "url",
      "id": "twitter_url",
      "label": "Lien Twitter/X"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Lien Instagram"
    }
  ],
  "blocks": [
    {
      "type": "legal_links",
      "name": "Liens légaux",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Titre",
          "default": "Légal"
        },
        {
          "type": "text",
          "id": "mentions_label",
          "label": "Libellé Mentions légales",
          "default": "Mentions légales"
        },
        {
          "type": "url",
          "id": "mentions_url",
          "label": "Lien Mentions légales"
        },
        {
          "type": "text",
          "id": "cgv_label",
          "label": "Libellé CGV",
          "default": "CGV"
        },
        {
          "type": "url",
          "id": "cgv_url",
          "label": "Lien CGV"
        },
        {
          "type": "text",
          "id": "privacy_label",
          "label": "Libellé Confidentialité",
          "default": "Confidentialité"
        },
        {
          "type": "url",
          "id": "privacy_url",
          "label": "Lien Confidentialité"
        },
        {
          "type": "text",
          "id": "cookies_label",
          "label": "Libellé Cookies",
          "default": "Cookies"
        },
        {
          "type": "url",
          "id": "cookies_url",
          "label": "Lien Cookies"
        }
      ]
    },
    {
      "type": "menu",
      "name": "Menu personnalisé",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Titre"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu"
        }
      ]
    },
    {
      "type": "text",
      "name": "Texte libre",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Titre"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Contenu"
        }
      ]
    },
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "range",
          "id": "image_max_width",
          "label": "Largeur maximale de l'image (px)",
          "min": 80,
          "max": 600,
          "step": 20,
          "default": 320
        },
        {
          "type": "text",
          "id": "alt",
          "label": "Texte alternatif"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Lien"
        },
        {
          "type": "checkbox",
          "id": "open_in_new_window",
          "label": "Ouvrir dans un nouvel onglet",
          "default": false
        },
        {
          "type": "text",
          "id": "caption",
          "label": "Légende"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Pied de page SeniorTech",
      "blocks": [
        {
          "type": "legal_links"
        }
      ]
    }
  ]
}
{% endschema %}
