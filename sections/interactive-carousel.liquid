<section class="interactive-carousel" aria-labelledby="InteractiveCarouselHeading-{{ section.id }}" data-carousel>
  <div class="interactive-carousel__header">
    <h2 id="InteractiveCarouselHeading-{{ section.id }}">{{ section.settings.heading }}</h2>
    <div class="interactive-carousel__controls" role="group" aria-label="Contrôles du carrousel">
      <button class="carousel-prev" type="button" aria-label="Slide précédent">‹</button>
      <button class="carousel-next" type="button" aria-label="Slide suivant">›</button>
    </div>
  </div>
  <div class="interactive-carousel__track" data-carousel-track>
    {% for block in section.blocks %}
      <article class="interactive-carousel__item" role="group" aria-roledescription="slide" aria-label="{{ block.settings.title }}" {{ block.shopify_attributes }}>
        <img src="{{ block.settings.image | image_url: width: 800 }}" loading="lazy" alt="{{ block.settings.image.alt | default: block.settings.title }}">
        <div class="interactive-carousel__item-content">
          <h3>{{ block.settings.title }}</h3>
          <p>{{ block.settings.description }}</p>
          {% if block.settings.link != blank %}
            <a class="link-arrow" href="{{ block.settings.link }}">{{ 'general.buttons.learn_more' | t }}</a>
          {% endif %}
        </div>
      </article>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Carrousel interactif",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Titre",
      "default": "Nos innovations phares"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Titre",
          "default": "Produit SilverLink"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Description concise et rassurante."
        },
        {
          "type": "url",
          "id": "link",
          "label": "Lien"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Carrousel interactif",
      "blocks": [
        {"type": "slide"},
        {"type": "slide"},
        {"type": "slide"}
      ]
    }
  ]
}
{% endschema %}
