      {% if settings.logo != blank %}
        <a href="/" class="logo-link">
          <img src="{{ settings.logo | image_url: width: 220 }}" alt="{{ shop.name }}" class="site-logo">
        </a>
      {% else %}
        <a href="/" class="logo-text">{{ shop.name }}</a>
      {% endif %}
    </div>
